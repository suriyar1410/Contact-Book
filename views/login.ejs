<%- include('partials/header') %>

<div class="d-flex align-items-center justify-content-center vh-100">
  <div class="card p-4 rounded-4" >
    <h3 class="text-center mb-1 text-primary fw-bold">User Login</h3>
    <% if (errormsg && errormsg !== "") { %>
      <p class="text-center text-danger fw-semibold"><%= errormsg %></p>
    <% } %>
    <form action="/login" method="POST">
      <div class="mb-3">
        <label for="loginName" class="form-label fw-semibold">Username</label>
        <input type="text" class="form-control" id="loginName" name="loginName" placeholder="Enter your username" required>
      </div>
      <div class="mb-3">
        <label for="loginPassword" class="form-label fw-semibold">Password</label>
        <input type="password" class="form-control" id="loginPassword" name="loginPassword" placeholder="Enter your password" required>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary w-auto px-4">Login</button>
      </div>
    </form>
    <div class="text-center mt-3">
      <p class="mb-1">Donâ€™t have an account? <a href="/signin" class="text-decoration-none fw-semibold">Sign up</a></p>
      <p><a href="/delete-account" class="text-decoration-none text-danger fw-semibold">Delete account</a></p>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
