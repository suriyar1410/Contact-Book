<%- include('partials/header') %>

<div class="d-flex align-items-center justify-content-center vh-100">
  <div class="card p-4 rounded-4">
    <h3 class="text-center mb-3 text-primary fw-bold">Sign Up</h3>
    <% if (errormsg && errormsg !== "") { %>
      <p class="text-center text-danger fw-semibold"><%= errormsg %></p>
    <% } %>
    <form action="/signin" method="POST">
      <div class="mb-3">
        <label for="signName" class="form-label fw-semibold">Username</label>
        <input type="text" class="form-control" id="signName" name="signName" placeholder="Enter your username" required>
      </div>
      <div class="mb-3">
        <label for="signPassword" class="form-label fw-semibold">Password</label>
        <input type="password" class="form-control" id="signPassword" name="signPassword" placeholder="Enter your password" required>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary w-auto px-4">Sign Up</button>
      </div>
    </form>
    <div class="text-center mt-3">
      <p>Already have an account? 
        <a href="/login" class="text-decoration-none fw-semibold">Log in</a>
      </p>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
